@using DancingGoat.Models
@model (SingleNewsDetailViewModel ViewModel, IEnumerable<NewsListItemViewModel> News)

@{
    ViewData["PageClass"] = "inverted";
    ViewData["Title"] = Model.ViewModel.Name;
}

<section class="page-header-block">
    <figure>
        <img src="~/Content/Images/inner-page-header.png">
    </figure>
    <div class="content">
        <h2>News</h2>
    </div>
</section>

<section class="single-post-block">
    <div class="content">
        @Html.Raw(Model.ViewModel.Description)
    </div>
</section>

<section class="news-block list-block">
    <ul class="items-list">
        @foreach (var newsItem in Model.News)
        {
            <li>
                <a href="@newsItem.Url">
                    <div class="featured-img">
                        <figure>
                            <img src="@Url.Content(newsItem.ImagePath)" alt="@newsItem.Name">
                        </figure>
                    </div>
                    <h3>@newsItem.Name</h3>
                    <p>@newsItem.ShortDescription</p>
                </a>
            </li>
        }
    </ul>
</section>

<partial name="~/Views/Shared/_LogoSection.cshtml" />