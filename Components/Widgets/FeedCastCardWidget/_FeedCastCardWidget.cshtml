@model DancingGoat.Widgets.FeedCastCardListViewModel

<div class="content-wrapper" style="padding: 0 2.4rem 2em 2.4rem;">
    @if (@Model.FeedCasts.Count() == 0)
    {
        <h3 style="text-align: center">Please select a FeedCast.</h3>
    }
    else
    {
        <div class="row" style="display: flex; flex-wrap: wrap;">
            @foreach (var feedcast in Model.FeedCasts)
            {
                <div class="col-md-4" style="padding: 0 0.6rem;">
                    <div class="product-card">
                        <div style="text-align: center;">
                            @if (!string.IsNullOrEmpty(@feedcast.ImagePath))
                            {
                                <img src="@Url.Content(feedcast.ImagePath)" alt="@feedcast.Heading" title="@feedcast.Heading" loading="lazy" />
                            }
                            <h3>@feedcast.Heading</h3>

                            @if (!string.IsNullOrEmpty(feedcast.Text))
                            {
                                <p>@feedcast.Text</p>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
